<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#0000"
    android:orientation="horizontal">
	
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent">
    <ImageView
        android:id="@+id/imgIcon"
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/sub_menu_image"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/beer_icon" />

    <TextView
        android:id="@+id/sub_menu_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/sub_menu_quantity"
        android:layout_toRightOf="@+id/sub_menu_image"
        android:gravity="center_vertical"
        android:text="shwetang"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/sub_menu_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
         android:gravity="center_vertical"
        android:layout_alignParentTop="true"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sub_menu_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="30dp"
        android:layout_toLeftOf="@+id/sub_menu_price"
        android:gravity="center_vertical"
        android:textSize="20dp"
        android:textStyle="italic"
        android:text="TextView" />

</RelativeLayout>
</LinearLayout>